Overlay *msgOverlay;
DynamicSprite *msgSprite;

function DrawBlinds()
{
  msgSprite = DynamicSprite.Create(Room.Width, Room.Height);
  DrawingSurface *surface = msgSprite.GetDrawingSurface();
  
  surface.DrawingColor = 0; // Black
  surface.DrawRectangle(0, 0,  Room.Width, Room.Height); 
  
  // Creates the actual overlay (will display it on screen)
  msgOverlay = Overlay.CreateGraphical(
    0,
    0, 
    msgSprite.Graphic,
    true);     
}

